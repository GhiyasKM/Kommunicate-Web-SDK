{
  "name": "chat-widget",
  "version": "3.0.0-sasuke",
  "description": "",
  "main": "app.js",
  "author": "Forward <team.engineering@kommunicate.io>",
  "license": "ISC",
  "scripts": {
    "postinstall": "husky install",
    "prepublishOnly": "pinst --disable",
    "postpublish": "pinst --enable",
    "prettier": "prettier --ignore-path './.prettierignore' --write './**/*.js'",
    "prettify-commit": "pretty-quick --staged --pattern '**/*.js'",
    "build:scss-to-css": "node-sass --watch ./webplugin/scss -o ./webplugin/css/app/style",
    "build:dev": "nodemon ./server/app.js",
    "dev": "npm-run-all -p build:dev build:scss-to-css",
    "test": "NODE_ENV=test node ./server/app.js",
    "staging": "NODE_ENV=staging node ./server/app.js",
    "prod": "NODE_ENV=prod node ./server/app.js",
    "prod-enterprise": "NODE_ENV=prod_enterprise node ./server/app.js",
    "prod-in": "NODE_ENV=prod_in node ./server/app.js",
    "prod-eu": "NODE_ENV=prod_eu node ./server/app.js",
    "prod-ca": "NODE_ENV=prod_ca node ./server/app.js",
    "build-test": "NODE_ENV=test node ./server/build.js",
    "build-release": "NODE_ENV=release node ./server/build.js",
    "build-prod": "NODE_ENV=prod node ./server/build.js",
    "build-prod-enterprise": "NODE_ENV=prod_enterprise node ./server/build.js",
    "build-beta": "NODE_ENV=prod_beta node ./server/build.js",
    "build-prod-in": "NODE_ENV=prod_in node ./server/build.js",
    "build-prod-eu": "NODE_ENV=prod_eu node ./server/build.js",
    "build-staging": "NODE_ENV=staging node ./server/build.js",
    "serve-build": "serve -C -l 3030 webplugin/build",
    "run-danger-local": "danger local",
    "run-danger-test": "danger ci"
  },
  "dependencies": {
    "@node-minify/clean-css": "6.0.0",
    "@node-minify/core": "6.0.0",
    "@node-minify/google-closure-compiler": "6.0.0",
    "@node-minify/no-compress": "6.0.0",
    "@node-minify/terser": "6.0.0",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "express": "4.17.1",
    "form-data": "3.0.0",
    "minimist": "1.2.6",
    "node-fetch": "2.6.7",
    "playwright": "^1.29.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.29.1",
    "danger": "11.2.0",
    "danger-plugin-jira-issue": "1.4.1",
    "danger-plugin-no-console": "1.1.2",
    "husky": "5.0.9",
    "node-sass": "9.0.0",
    "nodemon": "2.0.7",
    "npm-run-all": "4.1.5",
    "pinst": "2.1.4",
    "prettier": "2.2.1",
    "pretty-quick": "3.1.0",
    "serve": "14.0.1"
  },
  "nodemonConfig": {
    "verbose": true,
    "ext": "js, html, css, json, scss",
    "ignore": [
      "*.min.*",
      "./webplugin/build/"
    ],
    "delay": "4000",
    "watch": [
      "server",
      "webplugin"
    ]
  }
}